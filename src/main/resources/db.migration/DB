CREATE TABLE `game`.`squadra` (
  `ID` INT NOT NULL AUTO_INCREMENT,
  `NOME` VARCHAR(45) NOT NULL,
  `COLORE` VARCHAR(45) NOT NULL,
  PRIMARY KEY (`ID`));



CREATE TABLE `game`.`giocatore` (
  `ID` INT NOT NULL AUTO_INCREMENT,
  `NOME` VARCHAR(45) NULL,
  `COGNOME` VARCHAR(45) NULL,
  `DATA_NASCITA` VARCHAR(45) NULL,
  `ID_SQUADRA` INT NULL,
  PRIMARY KEY (`ID`),
  INDEX `ID_SQUADRA_idx` (`ID_SQUADRA` ASC) VISIBLE,
  CONSTRAINT `ID_SQUADRA`
    FOREIGN KEY (`ID_SQUADRA`)
    REFERENCES `game`.`squadra` (`ID`)
    ON DELETE SET NULL
    ON UPDATE CASCADE);